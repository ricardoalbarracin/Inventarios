
    @using inventarioImportaciones.Models
    @model LoginViewModel

   
<body class="page-login">
    <!--[if lt IE 8]>
        <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->

    <div class="loginContentWrap">
        <div class="container">
            <div class="row">
                <div class="text-center">
                    <h1 class="pageTitle">@Resourses.Global.iniciarsesion</h1>
                </div>
                <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-lg-4 col-lg-offset-4">
                    
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = " data-parsley-validate", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            if (ViewData.ModelState["loginError"] != null)
                            {

                                foreach (ModelError error in ViewData.ModelState["loginError"].Errors)
                                {
                                   
                                    <div class="alert-danger">
                                        <i>@error.ErrorMessage</i>
                                    </div>
                                }
                            }
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control simple-form-control", @placeholder = @Resourses.Global.Email })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "parsley-errors-list filled", @id="loginError" })
                            <i class="fa fa-envelope"></i>
                        </div>
                        <div class="form-group">
                            @*<input type="password" class="form-control simple-form-control" placeholder="Password" required data-parsley-error-message="Wrong password">*@
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control simple-form-control", @placeholder = @Resourses.Global.password })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "parsley-errors-list filled" })
                            <i class="fa fa-lock"></i>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-orange submit">@Resourses.Global.Acceder</button>
                        </div>
                        }
                    <ul class="more">
                        <li><a href="/account/register" title="#">@Resourses.Global.Registrarme</a></li>
                        <li><a href="/account/forgotpassword" title="#">@Resourses.Global.Olvidepassword</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    
</body>


    